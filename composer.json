{
    "name": "dimimo/pool",
    "description": "The Puerto Galera Billiard Competition Laravel 8|9|10 package",
    "keywords": [
        "Dimimo",
        "laravel",
        "pool",
        "billiard",
        "competition",
        "Puerto Galers"
    ],
    "homepage": "https://github.com/dimimo/pool",
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitri Mostrey",
            "email": "dmostrey@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "barryvdh/laravel-dompdf": "^2.0",
        "consoletvs/charts": "^6.5",
        "illuminate/contracts": "^9.28|^10.0",
        "kris/laravel-form-builder": "^1.51"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Dimimo\\Pool\\": "src/",
            "Dimimo\\Pool\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dimimo\\Pool\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dimimo\\Pool\\PoolServiceProvider"
            ],
            "aliases": {
                "Pool": "Dimimo\\Pool\\Facades\\Pool"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
